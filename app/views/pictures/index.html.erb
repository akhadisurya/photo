<div>
    <h1>dsfadsFootball Figures</h1>
</div>
<hr>
<%= button_to 'Upload a picture', new_picture_path, :method => "get" %>

<ul>
    <% @pictures.each do |picture| %>
        <li>
            <strong> Name: <%= picture.name %> </strong><br>
            <%= link_to image_tag(picture.url,:size => "70x100"), picture %><br>
            <%= link_to 'Edit', edit_picture_path(picture) %> |
            <%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
        <br>
    <% end %>
</ul>

<br>
